# EHReezy Railway Production Environment Variables
# Copy these to your Railway service environment variables

# Application Settings
APP_NAME=EHReezy
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-app-name.up.railway.app

# Use your actual app key - generate with: php artisan key:generate --show
APP_KEY=base64:1S3zr3UGfh2CO9XKYi5MzFXO98w82GrEeukg6H7HC4k=

# Database (Use Railway MySQL Plugin Variables)
DB_CONNECTION=mysql
DB_HOST=${{MYSQLHOST}}
DB_PORT=${{MYSQLPORT}}
DB_DATABASE=${{MYSQLDATABASE}}
DB_USERNAME=${{MYSQLUSER}}
DB_PASSWORD=${{MYSQLPASSWORD}}

# Session & Security
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

# Cache & Queue
CACHE_STORE=database
QUEUE_CONNECTION=database

# Mail Configuration (Configure with your mail service)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@ehreezy.com
MAIL_FROM_NAME=EHReezy

# CORS & API
SANCTUM_STATEFUL_DOMAINS=your-frontend-domain.com,your-app-name.up.railway.app
FRONTEND_URL=https://your-frontend-domain.com

# Optional: Seed database on first deploy
SEED_DATABASE=true

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=info
